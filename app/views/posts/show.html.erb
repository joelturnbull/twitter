<p id="notice"><%= notice %></p>


<span class="content"><%= @post.body %></span>
<br>
<span class="timestamp">
  Posted <%= time_ago_in_words(@post.created_at) %> ago.
</span>
<br>
<% if current_user == @post.user %>
  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Back', posts_path %>
<% end %>

