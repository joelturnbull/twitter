<p id="notice"><%= notice %></p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>
<% unless current_user?(@user) %>
  <% if current_user.following?(@user) %>
    <%= render 'unfollow', user: @user %>
  <% else %>
    <%= render 'follow', user: @user %>
  <% end %>
<% end %>

<% if @posts.length > 0 %>
  <% @posts.each do |post| %>
    <%= render '/posts/post', post: post %>
  <% end %>
<% else %>
  <p><%= @user.email %> doesn't have any posts.</p>
<% end %>

