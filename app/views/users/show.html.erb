<p id="notice"><%= notice %></p>

<h1>
  <%= @user.email %>'s Page
</h1>

<p>
  <%= link_to "Send #{@user.email} a direct message", new_user_message_path(@user) %>
</p>

<% unless current_user?(@user) %>
  <% if current_user.following?(@user) %>
    <%= render 'unfollow', user: @user %>
  <% else %>
    <%= render 'follow', user: @user %>
  <% end %>
<% end %>

<h3>Posts:</h3>

<% if @posts.length > 0 %>
  <% @posts.each do |post| %>
    <%= render '/posts/post', post: post %>
  <% end %>
<% else %>
  <p><%= @user.email %> doesn't have any posts.</p>
<% end %>

